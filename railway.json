{
  "builder": "nixpacks",
  "nixpacks": {
    "python": "3.12",
    "buildCommands": [
      "cd backend && pip install -r requirements.txt"
    ],
    "startCmd": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port $PORT"
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false"
      }
    }
  }
}
