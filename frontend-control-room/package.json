{
  "name": "water-monitoring-control-room",
  "version": "1.0.0",
  "description": "National Water Infrastructure Monitoring Control Room",
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "axios": "^1.6.5",
    "recharts": "^2.10.3",
    "leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1",
    "socket.io-client": "^4.6.1",
    "@mui/material": "^5.15.3",
    "@mui/icons-material": "^5.15.3",
    "date-fns": "^3.0.6"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "react-scripts": "5.0.1"
  },
  "build": {
    "appId": "com.watermonitoring.controlroom",
    "productName": "Water Monitoring Control Room",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
